<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_course_form" model="ir.ui.view">
        <field name="name">course.course.form</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <form string="Course">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_course_tree" model="ir.ui.view">
        <field name="name">course.course.tree</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <tree string="Courses">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_course_search" model="ir.ui.view">
        <field name="name">course.course.search</field>
        <field name="model">course.course</field>
        <field name="arch" type="xml">
            <search string="Search Courses">
                <field name="name"/>
                <filter name="all_courses" string="All Courses" domain="[]"/>
            </search>
        </field>
    </record>
</odoo>
