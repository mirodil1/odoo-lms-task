<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action -->
    <record id="action_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">course.course</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_course_tree"/>
        <field name="search_view_id" ref="view_course_search"/>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_course_root" name="Courses"/>
    <menuitem id="menu_course" name="Course List" parent="menu_course_root" action="action_course"/>
</odoo>